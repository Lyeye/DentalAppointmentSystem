<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_sunshine"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".appointment.TimeAppointmentActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:background="@mipmap/ic_clock">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                app:cardBackgroundColor="@color/aquamarine"
                app:cardCornerRadius="4dp"
                app:cardElevation="20dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/greenyellow"
                        android:gravity="center"
                        android:textSize="35dp"
                        android:textStyle="bold"
                        android:text="选择预约时间">
                    </TextView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="80dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/bg_am_time_select_btn"
                            android:text="8:00-9:00"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="italic" />

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="80dp"
                            android:background="@drawable/bg_am_time_select_btn"
                            android:text="9:00-10:00"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="italic" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="80dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/bg_am_time_select_btn"
                            android:text="10:00-11:00"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="italic" />

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="80dp"
                            android:background="@drawable/bg_am_time_select_btn"
                            android:text="11:00-12:00"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="italic" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="80dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/bg_am_time_select_btn"
                            android:text="14:30-15:30"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="italic" />

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="80dp"
                            android:background="@drawable/bg_am_time_select_btn"
                            android:text="15:30-16:30"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="italic" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="80dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/bg_am_time_select_btn"
                            android:text="17:30-18:30"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="italic" />

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="80dp"
                            android:background="@drawable/bg_am_time_select_btn"
                            android:text="18:30-19:30"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="italic" />
                    </LinearLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>