<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@mipmap/bg_sky"
    android:orientation="vertical"
    tools:context=".appointment.DateSelectionActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">


        <com.haibin.calendarview.CalendarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:calendar_show_mode="both_month_week_view"
            app:default_status="shrink">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ds_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="13月"
                    android:textColor="@color/orangered"
                    android:textSize="35dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/tv_ds_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="1000年"
                    android:textColor="@color/black"
                    android:textSize="25dp"></TextView>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@mipmap/ic_appointment"></ImageView>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/black" />

            <com.haibin.calendarview.CalendarView
                android:id="@+id/cv_ds_calender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/gray_cc"
                app:selected_theme_color="@color/pink"
                app:scheme_text="满"
                app:scheme_theme_color="@color/firebrick"
                app:scheme_lunar_text_color="@color/white"
                app:current_day_lunar_text_color="@color/orangered"
                app:current_day_text_color="@color/orangered"
                app:current_month_lunar_text_color="@color/orangered"
                app:current_month_text_color="@color/material_blue_grey_80">

            </com.haibin.calendarview.CalendarView>

        </com.haibin.calendarview.CalendarLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>