<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".home.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_main_userInfo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@mipmap/ic_user"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_main_affiliatedHospital"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/iv_main_setting"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@mipmap/ic_setting"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#404040" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_main_userPhoto"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/ic_user"
            app:civ_border_color="@color/gray_8f"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/tv_main_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/iv_main_userPhoto"
            android:text="请登录"
            android:textColor="#C8000000"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/tv_main_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_main_username"
            android:text="男"
            android:textColor="@color/gray"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_main_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_main_username"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/iv_main_userPhoto"
            android:text="诊号："
            android:textColor="@color/midnightblue"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_main_diagnosisNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_main_username"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/tv_main_no"
            android:textColor="@color/midnightblue"
            android:textSize="20dp" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#404040" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约信息"
                android:textColor="#121212"
                android:textSize="20dp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_main_appointmentInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#404040" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <Button
                    android:id="@+id/btn_main_register"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="20sp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_main_ripple_btn_1"
                    android:drawableTop="@mipmap/ic_phone"
                    android:elevation="8dp"
                    android:padding="10dp"
                    android:text="登记"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_main_appointment"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="15sp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_main_ripple_btn_2"
                    android:drawableTop="@mipmap/ic_calendar"
                    android:padding="10dp"
                    android:text="预约"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp">

                <Button
                    android:id="@+id/btn_main_myfamily"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="20sp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_main_ripple_btn_3"
                    android:drawableTop="@mipmap/ic_group"
                    android:padding="10dp"
                    android:text="我的家族"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_main_notice"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="15sp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_main_ripple_btn_4"
                    android:drawableTop="@mipmap/ic_notice"
                    android:padding="10dp"
                    android:text="通知"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp">

                <Button
                    android:id="@+id/btn_main_camera"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="20sp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_main_ripple_btn_5"
                    android:drawableTop="@mipmap/ic_camera"
                    android:padding="10dp"
                    android:text="相机"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_main_remote"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="15sp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_main_ripple_btn_6"
                    android:drawableTop="@mipmap/ic_remote"
                    android:padding="10dp"
                    android:text="远程诊断"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>